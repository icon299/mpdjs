<% include ./header.ejs %>
<link href="css/modal.css" rel="stylesheet" type="text/css"/>
<body>
  <div id="topbar">
    <div id="title">Folders</div>
      <div id="leftnav">
        <a href="/">
          <img src="img/home.png" alt="Home">
          <a href="javascript:history.back()">Back</a>
        </a>
      </div>
    <div id="rightnav">
      <a href="/menu">Menu</a>
    </div>
