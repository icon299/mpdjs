<!doctype html>
<html class="no-js" lang="">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="default">

    <title>MPD.FM</title>

    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="manifest" href="site.webmanifest">
    <link rel="apple-touch-icon" href="favicon.png">
    <link rel="stylesheet" href="css/font.css">
    <link rel="stylesheet" href="css/style.css">

    <style>
      
    </style>
</head>

<body class="list">
    <div class="custom-wrapper pure-g" id="menu" style="display:none;">
        <div class="pure-u-1 pure-u-md-1-5">
            <div class="pure-menu">

                <a href="javascript:history.back()" class="pure-menu-heading custom-brand">Back</a>
                <a href="#" class="custom-toggle" id="toggle"><s class="bar"></s><s class="bar"></s></a>
            </div>
        </div>
        <div class="pure-u-1 pure-u-md-4-5">

            <div class="pure-menu pure-menu-horizontal custom-can-transform">
                <ul class="pure-menu-list">
                    <li class="pure-menu-item pure-menu-active"><a href="/" class="pure-menu-link">Home</a></li>
                    <li class="pure-menu-item"><a href="/radio" class="pure-menu-link">Radio</a></li>
                    <li class="pure-menu-item"><a href="/pl" class="pure-menu-link">Playlists</a></li>
                    <li class="pure-menu-item"><a href="/mb" class="pure-menu-link">Mucis Folders</a></li>
                    <li class="pure-menu-item"><a href="/stats" class="pure-menu-link">Stats</a></li>

                </ul>
            </div>
        </div>
    </div>

    <div id="topbar">
        <div id="leftnav">
            <a href="/">
                <img src="img/home.png" alt="Home">
            </a>
        </div>
        <div id="rightnav">
            <a href="/radio">Radio</a>
        </div>
        <div id="title">Music Folders</div>
    </div>

    <div class="log-content display-none">
    </div>

    <div id="content">

  <div id="mystations" >
    <% if (item.length) { %>
    <div>
      <ul>
        
      <% item.forEach(function(item){ %>
      <% if (item.type !== 'playlist') { %>
        <li class="withimage"><div>
          <% if (item.type == 'directory') { %> 

          <div onclick="getPage('dir?d=<%=item.path%>')">
              <img class="pure-img" src="/img/folder.png" alt="">
              <span class="name"><%= item.name%></span>            
          </div>
          <%} else %>
          <% if (item.type == 'file') { %> 
          <div>
            <img class="pure-img" src="/img/double_note.png" alt="">
            <span class="name"><%= item.name%></span>            
          </div>
                    <span class="arrow"
                
                onclick="onAddToQuenue('<%=item.path%>')">
          </span>
          <%} else %> 
          <% if (item.type == 'playlist') { %> 
          <div class="pure-u-1-4 l-box" onclick="getPage(<%=item.path%>)">
            <div class="station-logo">
              <img class="pure-img" src="/img/playlist.png" alt="">
            </div>
          </div>          
          <%}%>
            <span class="arrow" onclick="onAddToQuenue('<%=item.path%>')">
          </span>
        </div>
        </li>
        <% } %>
     <% }) %>

   </ul>
     </div>
    <% } %>
    
  </div>
    </div>

<% include ./footer.ejs %>

</body>
</html>
